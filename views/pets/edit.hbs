<h3>Edit Pet Information</h3>
<div class="class row">
    <form action="/pets/{{pet._id}}" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT"
    <div class="row">
        <div class="input-field">
            <input type="text" id="title" name="title" value="{{pet.title}}">
            <label for="title">Pet Name</label>
        </div>
    </div>
    


    <div class="row">
        <div class="input-field">
            <select name="event" id="status">
                {{#select pet.event}}
                <option value="walk" selected>Walk</option>
                <option value="poop" >Poop</option>
                <option value="pee" >Pee</option>
                <option value="food" >Food</option>
                {{/select}}
            </select>
            <label for="event">Event</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field">
            <h5>Tell Us About Your Pet</h5>
            <textarea name="body" id="body">{{pet.body}}</textarea>
        </div>
    </div>

    <div class="row">
        <input type="submit" value="Save" class="btn">
        <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
    </form>
</div>
