<h1>Your Pets</h1>
<div class="row">
    {{#each pets}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip">
                    <img src="{{{user.image}}}" alt="">
                    <a href="/pets/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/pets/{{_id}}" class="btn grey">More Info</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No pets to display</p>
    {{/each}}
</div>