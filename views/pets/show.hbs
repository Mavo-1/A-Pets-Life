<div class="row">
    <div class="col s12 m8">
        <h3>{{pet.title}}
            <small>{{{editIcon pet.user user pet._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY'}}</span>
                {{{pet.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{pet.user.displayName}}</span>
                <img src="{{pet.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/pets/user/{{pet.user._id}}">More From {{pet.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>